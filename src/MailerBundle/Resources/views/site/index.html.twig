{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s8 offset-s4">
            <h1>Email sender</h1>
            <p>
                Email sender is a service that can help you to send<br/>
                you email annonymously.
            </p>
        </div>
        {% if is_granted('ROLE_USER') %}
        <div class="col s4 offset-s5">
            <a class="waves-effect deep-purple btn" href="{{ path('email') }}">
                <span class="deep-purple">Send email</span>
            </a>
        </div>
        {% endif %}
    </div>


{% endblock %}